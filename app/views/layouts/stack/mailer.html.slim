doctype strict
html[xmlns='http://www.w3.org/1999/xhtml']
  head
    meta http-equiv="Content-Type" content="text/html; charset=utf-8"
    meta name="viewport" content="width=device-width"

    = stylesheet_link_tag "foundation_emails"
  css:
    .header {
      background: #8a8a8a;
    }
    .header .columns {
      padding-bottom: 0;
    }
    .header p {
      color: #fff;
      margin-bottom: 0;
    }
    .header .wrapper-inner {
      padding: 20px; /*controls the height of the header*/
    }
    .header .container {
      background: #8a8a8a;
    }
    .wrapper.secondary {
      background: #f3f3f3;
    }
    table.container{
      width: 900px;
    }
    th, td{
      padding: 1%;
    }
    a, .red {
      color: #dd715e;
    }
    .email-margin-top{
      margin-top: 10px;
    }
    .not-completed-mark{
      font-weight: bold;
      color: red;
    }
    .badge {
        display: inline-block;
        padding: .25em .4em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .25rem;
        margin-right: 3px;
        margin-left: 3px;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }
    .badge-danger {
        color: #fff;
        background-color: #dc3545;
    }
  body
    table.body data-made-with-foundation=""
      tr
        td.center align="center" valign="top"
          center
            container
              = yield
