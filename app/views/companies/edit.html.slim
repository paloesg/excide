.row
  .col-sm-12
    ol.breadcrumb.text-right
      li
        a href="#" Home
      li
        a href="#" #{@company.name}
      li.active Update
    h1.page-header Update Company
.row
  .col-md-12
    = form_for(@company, url: {action: "update"}, html: { class: '', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f|
        = render 'form', f: f
        .row
          .col-md-4.col-sm-6
            = f.submit "Save details", class: 'btn btn-default'
