.row
  .col-sm-12
    ol.breadcrumb.text-right
      li.breadcrumb-item
        a href="/symphony" Dashboard
      li.breadcrumb-item
        a href="/symphony/company" #{@company.name}
      li.breadcrumb-item.active Manpower
    h1.page-header
      | Availability Listing

.row
  .col-sm-12
    table.table.table-hover
      thead
        tr
          th User
          th Availabilities
          th View Availabilities
          th Allocations
          th View Allocations

      tbody
        - @users.each do |user|
          tr
            td = user.full_name
            td = user.availabilities.count
            td = link_to 'View', user_conductor_availabilities_path(user.id)
            td = user.allocations.count
            td = link_to 'View'