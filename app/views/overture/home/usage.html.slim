  .col-3
    .card
      .card-body.p-6
        h6.card-title.mb-4
          i.material-icons-outlined.align-middle.mb-1.mr-3.font-size-h3 supervised_user_circle
          | Investors
        p.card-text Your current usage of Investors Capacity is
        .progress style="height: 4px;"
          .progress-bar class=(@company.pro? ? "bg-unlimited w-100" : "bg-#{@company.investor_progress_colour}") aria-valuemax="100" aria-valuemin="0" aria-valuenow="25" role="progressbar" style="width: #{@company.investor_progress}%;"
        - if @company.pro?
          p.text-primary.mt-3.font-weight-boldest Unlimited
        - else
          p.mt-3.font-weight-boldest class="text-#{@company.investor_progress_colour}"
            | #{@company.investor_investments.length} of 5
        em.font-size-sm.text-dark-50 ="*Your maximum number of investors in Investor List allowed in your Overture plan is #{@company.pro? ? 'Unlimited' : '5'}."
        .font-weight-bolder.mt-10.mb-4 Investor List
        - @company.investor_investments.each do |i|
          p = i.investor.name
.row.my-10.p-5.justify-content-between.mx-0.usage-banner
  .d-flex
    .font-weight-bolder.mr-1.my-auto Need an upgrade or customisation?
    p.my-auto Check our plans, or simply contact us
  .div
    = link_to 'Subscription Plans', overture_subscription_plan_path, class: 'btn btn-sm btn-outline-secondary bg-white font-weight-bolder text-primary mr-2'
    = link_to 'Contact Us', "https://www.paloe.com.sg/contact-us/", target: :_blank, class: 'btn btn-sm btn-primary font-weight-bolder'
