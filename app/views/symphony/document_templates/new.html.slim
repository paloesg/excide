.row
  .col-sm-12
    ol.breadcrumb
      li.breadcrumb-item.ml-auto
        a href="/symphony" Dashboard
      li.breadcrumb-item
        a href="/symphony/company" #{@company.name}
      li.breadcrumb-item
        a href="/symphony/document_templates" Document Templates
      li.breadcrumb-item.active New
    h1.border-bottom Upload Document Template

.row
  .col-sm-12
    = form_for(@document_template, url: symphony_document_templates_path, html: { class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f|
      = render 'form', f: f