.kt-portlet.mb-3
  .kt-portlet__head
    .kt-portlet__head-label
      h3.kt-portlet__head-title Documents
  .kt-portlet__body
    - if @documents.empty?
      | No documents yet.
    - else
      - @documents.each do |d|
        ul.list-group.list-group-flush
          li.list-group-item
            .media
              .align-self-center
                = link_to symphony_document_path(d)
                  = fa_icon "file", style: 'font-size: 50px;', class: 'mr-3'
              .media-body
                h5.card-title = d.filename
                h6.card-subtitle = d.user&.full_name
                .text-muted = d.created_at.strftime("Uploaded at %d/%m/%Y %R")
.kt-portlet.mb-3
  .kt-portlet__head
    .kt-portlet__head-label
      h3.kt-portlet__head-title Documents Templates
  .kt-portlet__body
    - if @documents.empty?
      | No documents yet.
    - else
      - @document_templates.each do |d|
        ul.list-group.list-group-flush
          li.list-group-item
            .media
              .align-self-center
                a href = d.file_url
                  i.ti-file.icon.mr-3 style="font-size: 50px"
              .media-body
                h5.card-title = d.title
                h6.card-subtitle = File.basename(d.file_url)
                .text-muted = d.created_at.strftime("Uploaded at %d/%m/%Y %R")
